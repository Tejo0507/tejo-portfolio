@import url('https://fonts.googleapis.com/css2?family=Comic+Relief:wght@400;700&family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap');

*{
    margin: 0;
    padding: 0;
    text-decoration: none;
    box-sizing: border-box;
    border: none;
    outline: none;
}
:root {
    --bg-color: #151f28;
    --main-color: #00abf0;
    --text-color: #333;
    --second-text-color: #555;
    --white-color:#fff;
    --cover-color:linear-gradient(45deg, #00abf0, #006e9a);
    --pages-color:linear-gradient(90deg, #fff, #ddd);
    --border: 0.125rem solid #00abf0;
    --box-shadow: 0 0 0.8rem rgba(0,0,0,0.2);

}
body{
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh; 
    background-color: var(--bg-color);
    color: var(--text-color);
    overflow: hidden;
    font-family: "Nunito", sans-serif;
}
.wrapper{
    position: relative;
    width: 66rem;
    height: 45rem;
    padding: 2rem;
    perspective: 250rem;
    animation: show-animate 2s forwards;
}
@keyframes show-animate {
    0%,
    30% {
        opacity: 0;
        transform: rotate(-20deg);
    }
    100% {
        opacity: 1;
        transform: rotate(0deg);
    }
}
.cover {
    position: absolute;
    top: 0;
    left: 0;
    width: 50%;
    height: 100%;
    background: var(--cover-color);
    box-shadow: var(--box-shadow);
    border-top-left-radius: 0.6rem;
    border-bottom-left-radius: 0.6rem;
    transform-origin: right;
}
.cover.cover-left{
    z-index: -1;
}
.cover.cover-right{
    z-index: 100;
    transition: transform 1s cubic-bezier(.645, .045, .355, 1);

}
.cover.cover-right.turn {
    transform: rotateY(180deg);
}
.book {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    perspective: 250rem;
}
.book .book-page {
    position: absolute;
    width: 50%;
    height: 100%;
    background: var(--pages-color);
    box-shadow: 0 0 .6rem rgba(0,0,0,0.1);
    display: flex;
    padding: 2rem;
}
.book-page.page-left{
    box-shadow: -.6rem .6rem .6rem rgba(0,0,0,0.1);
}
.profile-page{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
/* Profile image with modern styling */
.profile-page img{
     max-width: 180px;
     border-radius: 50%;
     border: 0.35rem solid var(--main-color);
     margin-bottom: .8rem;
     box-shadow: 0 8px 24px rgba(220, 38, 38, 0.3);
     transition: var(--transition);
}

.profile-page img:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 32px rgba(220, 38, 38, 0.4);
}

.profile-page h1 {
    font-size: 2.7rem;
    line-height: 1.2;
    font-weight: 700;
    background: linear-gradient(135deg, var(--text-color), var(--main-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.profile-page h3{
    color: var(--main-color);
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 0.3rem;
}

.profile-page .social-media {
    margin: .8rem 0;
    display: flex;
    gap: 0.5rem;
}

.profile-page .social-media a{
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 2.8rem;
    height: 2.8rem;
    background: transparent;
    border: 0.15rem solid var(--main-color);
    border-radius: 50%;
    font-size: 1.4rem;
    color: var(--main-color);
    transition: var(--transition);
    position: relative;
}

.profile-page .social-media a::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: var(--main-color);
    transform: scale(0);
    transition: var(--transition);
    z-index: -1;
}

.profile-page .social-media a:hover::before {
    transform: scale(1);
}

.profile-page .social-media a:hover{
    color: var(--white-color);
    border-color: var(--secondary-color);
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
}

.profile-page p {
    text-align: justify;
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--text-color);
}

.profile-page .btn-box{
    margin-top: 1.5rem;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
}
/* ============================================
   BUTTON STYLES - Modern & Interactive
   ============================================ */
.btn {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.8rem;
    min-width: 10rem;
    height: 3.2rem;
    background: var(--main-color);
    border: 0.15rem solid var(--main-color);
    border-radius: 0.5rem;
    font-size: 1rem;
    color: var(--white-color);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    z-index: 1;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%);
    transition: width 0.5s, height 0.5s;
}

.btn:hover::before {
    width: 300px;
    height: 300px;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(220, 38, 38, 0.3);
}

.btn-box .btn:nth-child(2){
    background: transparent;
    color: var(--main-color);
}

.btn-box .btn:nth-child(1):hover{
    background: var(--secondary-color);
    border-color: var(--secondary-color);
}

.btn-box .btn:nth-child(2):hover{
    background: var(--main-color);
    color: var(--white-color);
}

/* right page */
.book-page.page-right{
    position: absolute;
    right: 0;
    transform-style: preserve-3d;
    transform-origin: left;
    transition: transform 1s cubic-bezier(.645, .045, .355, 1);
}
.book-page.page-right.turn{
    transform: rotateY(-180deg);
}

.book-page .page-front,
.book-page .page-back{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--pages-color);
    padding: 1.5rem 2rem;
}
.book-page .page-front{
    transform: rotateY(0deg) translateZ(1px);
}
.book-page .page-back{
    transform: rotateY(180deg) translateZ(1px);
}

/* ============================================
   SECTION TITLES
   ============================================ */
.title {
    text-align: center;
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--text-color);
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, var(--main-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

/* ============================================
   WORK & EDUCATION TIMELINE
   ============================================ */
.workeduc-box {
    border-left: 0.2rem solid var(--main-color);
    margin-top: 2rem;
    position: relative;
    max-height: 32rem;
    overflow-y: auto;
    padding-right: 0.5rem;
}

/* Custom scrollbar */
.workeduc-box::-webkit-scrollbar {
    width: 6px;
}

.workeduc-box::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
}

.workeduc-box::-webkit-scrollbar-thumb {
    background: var(--main-color);
    border-radius: 10px;
}

.workeduc-box::-webkit-scrollbar-thumb:hover {
    background: var(--secondary-color);
}

.workeduc-box .workeduc-content {
    position: relative;
    padding-left: 1.8rem;
    padding-bottom: 1.5rem;
    transition: var(--transition);
}

.workeduc-box .workeduc-content:hover {
    padding-left: 2rem;
}

.workeduc-box .workeduc-content::before{
    content: '';
    position: absolute;
    top: 0;
    left: -0.7rem;
    width: 1.3rem;
    height: 1.3rem;
    border-radius: 50%;
    background: var(--main-color);
    border: 0.2rem solid var(--white-color);
    box-shadow: 0 0 0 0.2rem var(--main-color);
    transition: var(--transition);
}

.workeduc-box .workeduc-content:hover::before {
    background: var(--secondary-color);
    transform: scale(1.2);
}

.workeduc-content .year {
    color: var(--main-color);
    font-size: 1.1rem;
    font-weight: 600;
    display: inline-block;
    margin-bottom: 0.3rem;
}

.workeduc-content h3{
    font-size: 1.3rem;
    margin: .4rem 0;
    color: var(--text-color);
    font-weight: 600;
    line-height: 1.3;
}

.workeduc-content h4{
    font-size: 1.1rem;
    margin: .2rem 0;
    color: var(--secondary-color);
    font-weight: 500;
}

.workeduc-content p{
    font-size: 1.05rem;
    text-align: justify;
    line-height: 1.6;
    color: var(--second-text-color);
}

.workeduc-content .year i {
    margin-right: .4rem;
    font-size: 1.1rem;
}
.number-page{
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
    font-weight: 600;
}

/* next button */
.nextprev-btn{
    position: absolute;
    bottom: .9rem;
    right: 1.5rem;
    width: 2rem;
    height: 2rem;
    cursor: pointer;
    font-size: 2rem;
    color: var(--second-text-color);
    display: inline-flex;
    justify-content: center;
    align-items: center;
    transition: .5s;
}
.nextprev-btn:hover{
    color: var(--main-color);
}
.nextprev-btn.back{
    left: 1.5rem;
}

/* ============================================
   SERVICES / EXPERTISE CARDS
   ============================================ */
.services-box{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(10rem, 1fr));
    gap: 1.2rem;
    margin-top: 2rem;
    max-height: 32rem;
    overflow-y: auto;
    padding-right: 0.5rem;
}

/* Custom scrollbar for services */
.services-box::-webkit-scrollbar {
    width: 6px;
}

.services-box::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
}

.services-box::-webkit-scrollbar-thumb {
    background: var(--main-color);
    border-radius: 10px;
}

.services-box .services-content{
    background: var(--card-gradient);
    border: 0.15rem solid transparent;
    border-radius: 0.8rem;
    padding: 1.2rem 0.8rem;
    text-align: center;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.services-box .services-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(220, 38, 38, 0.05), rgba(239, 68, 68, 0.05));
    transform: translateY(100%);
    transition: var(--transition);
    z-index: 0;
}

.services-box .services-content:hover::before {
    transform: translateY(0);
}

.services-box .services-content:hover{
    border-color: var(--main-color);
    box-shadow: var(--hover-shadow);
    transform: translateY(-5px);
}

.services-content i{
    font-size: 2.8rem;
    color: var(--main-color);
    margin-bottom: 0.5rem;
    transition: var(--transition);
    position: relative;
    z-index: 1;
}

.services-box .services-content:hover i {
    transform: scale(1.1) rotate(5deg);
    color: var(--secondary-color);
}

.services-content h3{
    font-size: 1.15rem;
    margin: 0.5rem 0;
    color: var(--text-color);
    font-weight: 600;
    position: relative;
    z-index: 1;
}

.services-content p {
    margin: .5rem 0;
    font-size: 0.95rem;
    color: var(--second-text-color);
    line-height: 1.5;
    position: relative;
    z-index: 1;
}


/* ============================================
   SKILLS SECTION
   ============================================ */
.skills-box{
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-top: 2rem;
    max-height: 32rem;
    overflow-y: auto;
    padding-right: 0.5rem;
}

/* Custom scrollbar */
.skills-box::-webkit-scrollbar {
    width: 6px;
}

.skills-box::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
}

.skills-box::-webkit-scrollbar-thumb {
    background: var(--main-color);
    border-radius: 10px;
}

.skills-box .skills-content{
    flex: 1 1 100%;
}

.skills-content h3{
    font-size: 1.3rem;
    line-height: 1;
    margin-bottom: 1rem;
    color: var(--main-color);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.skills-content h3::before {
    content: '';
    width: 4px;
    height: 1.3rem;
    background: var(--main-color);
    border-radius: 2px;
}

.skills-content .content{
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
}

.skills-content .content span{
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-width: 6rem;
    height: 5.5rem;
    padding: 0.5rem;
    background: var(--card-gradient);
    border: 0.15rem solid var(--light-border);
    border-radius: 0.6rem;
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--text-color);
    transition: var(--transition);
    cursor: default;
    position: relative;
    overflow: hidden;
}

.skills-content .content span::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 0;
    background: var(--main-color);
    transition: var(--transition);
    z-index: 0;
}

.skills-content .content span:hover::before {
    height: 100%;
}

.skills-content .content span:hover{
    border-color: var(--main-color);
    box-shadow: var(--hover-shadow);
    transform: translateY(-5px);
    color: var(--white-color);
}

.skills-content .content span i{
    color: var(--main-color);
    font-size: 2.5rem;
    margin-bottom: 0.3rem;
    transition: var(--transition);
    position: relative;
    z-index: 1;
}

.skills-content .content span:hover i {
    color: var(--white-color);
    transform: scale(1.1);
}

/* ============================================
   PROJECTS SHOWCASE - Modern Card Design
   ============================================ */
.projects-showcase {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    max-height: 34rem;
    overflow-y: auto;
    padding-right: 0.5rem;
}

/* Custom scrollbar */
.projects-showcase::-webkit-scrollbar {
    width: 6px;
}

.projects-showcase::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
}

.projects-showcase::-webkit-scrollbar-thumb {
    background: var(--main-color);
    border-radius: 10px;
}

.project-card {
    background: var(--card-gradient);
    border: 0.15rem solid transparent;
    border-radius: 0.8rem;
    padding: 1.3rem;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--main-color);
    transform: scaleY(0);
    transition: var(--transition);
}

.project-card:hover::before {
    transform: scaleY(1);
}

.project-card:hover {
    border-color: var(--main-color);
    box-shadow: var(--hover-shadow);
    transform: translateX(5px);
}

.project-header {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    margin-bottom: 0.8rem;
}

.project-header i {
    font-size: 2rem;
    color: var(--main-color);
}

.project-header h3 {
    font-size: 1.3rem;
    color: var(--text-color);
    font-weight: 600;
}

.project-desc {
    font-size: 1rem;
    color: var(--second-text-color);
    line-height: 1.6;
    margin-bottom: 0.8rem;
}

.project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
}

.tech-tag {
    padding: 0.3rem 0.8rem;
    background: rgba(220, 38, 38, 0.1);
    color: var(--main-color);
    border-radius: 0.3rem;
    font-size: 0.85rem;
    font-weight: 600;
    border: 1px solid var(--accent-color);
}

.project-links {
    display: flex;
    gap: 0.8rem;
}

.project-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 1rem;
    background: transparent;
    border: 0.15rem solid var(--main-color);
    border-radius: 0.4rem;
    color: var(--main-color);
    font-size: 0.9rem;
    font-weight: 600;
    transition: var(--transition);
    cursor: pointer;
}

.project-btn:hover {
    background: var(--main-color);
    color: var(--white-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.2);
}


/* ============================================
   ADDITIONAL PROJECTS & CONTACT SECTION
   ============================================ */
.additional-projects {
    margin-top: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.project-item {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: var(--card-gradient);
    border: 0.15rem solid transparent;
    border-radius: 0.6rem;
    transition: var(--transition);
}

.project-item:hover {
    border-color: var(--main-color);
    box-shadow: var(--box-shadow);
    transform: translateX(5px);
}

.project-item > i {
    font-size: 2.5rem;
    color: var(--main-color);
    flex-shrink: 0;
}

.project-info h3 {
    font-size: 1.2rem;
    color: var(--text-color);
    margin-bottom: 0.4rem;
    font-weight: 600;
}

.project-info p {
    font-size: 0.95rem;
    color: var(--second-text-color);
    line-height: 1.5;
    margin-bottom: 0.5rem;
}

.mini-tech {
    font-size: 0.85rem;
    color: var(--main-color);
    margin-bottom: 0.6rem;
    font-weight: 500;
}

.project-info a {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    color: var(--main-color);
    font-weight: 600;
    font-size: 0.9rem;
    transition: var(--transition);
}

.project-info a:hover {
    color: var(--secondary-color);
    text-decoration: underline;
}

/* ============================================
   CONTACT SECTION
   ============================================ */
.contact-info {
    margin-top: 2rem;
    padding: 1.5rem;
    background: var(--card-gradient);
    border-radius: 0.8rem;
    border: 0.15rem solid var(--accent-color);
}

.contact-info h2 {
    font-size: 1.5rem;
    color: var(--main-color);
    margin-bottom: 0.8rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    justify-content: center;
}

.contact-info > p {
    text-align: center;
    color: var(--second-text-color);
    margin-bottom: 1.2rem;
    font-size: 1rem;
}

.contact-methods {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
}

.contact-link {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.8rem 1rem;
    background: var(--white-color);
    border: 0.15rem solid var(--light-border);
    border-radius: 0.5rem;
    color: var(--text-color);
    font-weight: 500;
    transition: var(--transition);
}

.contact-link i {
    font-size: 1.5rem;
    color: var(--main-color);
}

.contact-link:hover {
    border-color: var(--main-color);
    box-shadow: var(--box-shadow);
    transform: translateX(5px);
    background: rgba(220, 38, 38, 0.05);
}

/* ============================================
   BACK TO PROFILE BUTTON
   ============================================ */
.back-profile{
    position: absolute;
    bottom: 1.2rem;
    right: 2rem;
    width: 2.5rem;
    height: 2.5rem;
    background-color: transparent;
    border: 0.15rem solid var(--main-color);
    border-radius: 0.5rem;
    font-size: 1.3rem;
    color: var(--main-color);
    display: inline-flex;
    justify-content: center;
    align-items: center;
    transition: var(--transition);
    cursor: pointer;
}

.back-profile:hover{
    background: var(--main-color);
    color: var(--white-color);
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
}

.back-profile p{
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%) scale(.5);
    font-size: 1rem;
    font-weight: 600;
    opacity: 0;
    transition: var(--transition);
    color: var(--main-color);
    white-space: nowrap;
    pointer-events: none;
}

.back-profile:hover p{
    opacity: 1;
    transform: translateX(-50%) scale(1);
    top: -2rem;
}

/* ============================================
   RESPONSIVE DESIGN
   ============================================ */
@media (max-width: 1200px) {
    .wrapper {
        width: 90%;
        height: auto;
        min-height: 40rem;
    }
}

@media (max-width: 768px) {
    body {
        padding: 1rem;
    }
    
    .wrapper {
        width: 100%;
        height: auto;
        padding: 1rem;
    }
    
    .book {
        flex-direction: column;
    }
    
    .book-page {
        width: 100% !important;
        position: relative !important;
    }
    
    .profile-page h1 {
        font-size: 2rem;
    }
    
    .profile-page h3 {
        font-size: 1.2rem;
    }
    
    .btn {
        min-width: 8rem;
        padding: 0.7rem 1.5rem;
    }
}

@media (max-width: 480px) {
    .profile-page h1 {
        font-size: 1.8rem;
    }
    
    .title {
        font-size: 1.8rem;
    }
    
    .workeduc-content h3,
    .project-header h3 {
        font-size: 1.1rem;
    }
    
    .services-box {
        grid-template-columns: 1fr;
    }
}

/* ============================================
   LOADING ANIMATION (Optional)
   ============================================ */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.book-page.page-front,
.book-page.page-back {
    animation: fadeIn 0.6s ease-out;
}

/* ============================================
   LOADING SCREEN
   ============================================ */
.loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    transition: opacity 0.3s ease;
}

.loader {
    width: 50px;
    height: 50px;
    border: 4px solid rgba(220, 38, 38, 0.2);
    border-top: 4px solid var(--main-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.loading-screen p {
    color: var(--white-color);
    margin-top: 1.5rem;
    font-size: 1.2rem;
    font-weight: 500;
}

/* ============================================
   UTILITY CLASSES
   ============================================ */
.text-center {
    text-align: center;
}

.mt-1 { margin-top: 0.5rem; }
.mt-2 { margin-top: 1rem; }
.mt-3 { margin-top: 1.5rem; }

.mb-1 { margin-bottom: 0.5rem; }
.mb-2 { margin-bottom: 1rem; }
.mb-3 { margin-bottom: 1.5rem; }

/* ============================================
   ACCESSIBILITY IMPROVEMENTS
   ============================================ */
.visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

/* Focus styles for accessibility */
a:focus,
button:focus,
.btn:focus,
.nextprev-btn:focus {
    outline: 2px solid var(--main-color);
    outline-offset: 2px;
}

/* Reduced motion for accessibility */
@media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}

/* ============================================
   PRINT STYLES
   ============================================ */
@media print {
    body {
        background: white;
    }
    
    .wrapper {
        width: 100%;
        height: auto;
    }
    
    .nextprev-btn,
    .back-profile,
    .btn {
        display: none;
    }
    
    .book-page {
        page-break-inside: avoid;
    }
}